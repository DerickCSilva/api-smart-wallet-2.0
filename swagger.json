{
    "openapi": "3.0.1",
    "info": {
        "title": "SmartWallet API",
        "description": "Documentação de um simples gerenciador financeiro.",
        "version": "3.0.1"
    },
    "basePath": "/",
    "tags": [
        {
            "name": "category-controller",
            "description": "Category Controller"
        },
        {
            "name": "item-controller",
            "description": "Item Controller"
        }
    ],
    "paths": {
        "/api/categories/{page}": {
            "get": {
                "description": "Serviço responsável por buscar todas as categorias.",
                "summary": "Busca todas categorias",
                "tags": [
                    "category-controller"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "page",
                        "required": "true",
                        "type": "string",
                        "value": "1",
                        "description": "Parâmetro que seleciona qual página deseja visualizar."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "<b>REQUEST_SUCCESS</b> - <i>Categorias da página {paginaAtual}.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_INVALID</b> - <i>Número da página inválida.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            }
        },
        "/api/category": {
            "post": {
                "description": "Serviço responsável por criar categoria.",
                "summary": "Cria categoria",
                "tags": [
                    "category-controller"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    },
                                    "pre_pos": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Receitas",
                                    "type": "receita",
                                    "pre_pos": "pre"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "<b>RECORD_SUCCESS</b> - <i>Categoria registrada.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_EXISTS</b> - <i>Já existe uma categoria com esse nome.</i><br><b>DATA_NOT_INFORMED</b> - <i>Dado não informado na requisição.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            },
            "put": {
                "description": "Serviço responsável por editar uma categoria.",
                "summary": "Edita categoria",
                "tags": [
                    "category-controller"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "number"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    },
                                    "pre_pos": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "id": 1,
                                    "name": "Receitas",
                                    "type": "receita",
                                    "pre_pos": "pre"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "<b>UPDATED_SUCCESS</b> - <i>Categoria alterada com sucesso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_NOT_INFORMED</b> - <i>Dado não informado na requisição.</i><br><b>DATA_EXISTS</b> - <i>Já existe uma categoria com esse nome.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Categoria não encontrada.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            }
        },
        "/api/category/{id}": {
            "get": {
                "description": "Serviço responsável por buscar uma categoria.",
                "summary": "Busca uma categoria",
                "tags": [
                    "category-controller"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": "true",
                        "type": "string",
                        "value": "1",
                        "description": "Parâmetro que seleciona qual categoria foi selecionada."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "<b>REQUEST_SUCCESS</b> - <i>Busca realizada com sucesso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_INVALID</b> - <i>ID da Categoria inválido.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Categoria inexistente.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            },
            "delete": {
                "description": "Serviço responsável por deletar uma categoria.",
                "summary": "Deleta categoria",
                "tags": [
                    "category-controller"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": "true",
                        "type": "string",
                        "value": "1",
                        "description": "Parâmetro que identifica a categoria selecionada."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "<b>DATA_DELETED</b> - <i>Categoria deletada com sucessso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_NOT_INFORMED</b> - <i>Dado não informado na requisição.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Categoria inexistente.</i>"
                    },
                    "409": {
                        "description": "<b>DATA_CONFLICT</b> - <i>Existe Itens inclusos nessa categoria. Apagá-la pode fazer com que dê conflito no sistema.</i><br>[Retorna os itens da categoria]"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            }
        },
        "/api/records/{date}": {
            "get": {
                "description": "Serviço responsável por buscar todos os registros do mês selecionado.",
                "summary": "Busca todos os registros do mês selecionado",
                "tags": [
                    "item-controller"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "date",
                        "required": "true",
                        "type": "string",
                        "value": "2021-12",
                        "description": "Parâmetro que seleciona qual mês e ano foi selecionado."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "<b>REQUEST_SUCCESS</b> - <i>Busca realizada com sucesso.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            }
        },
        "/api/items": {
            "get": {
                "description": "Serviço responsável por buscar todos os itens.",
                "summary": "Busca todos itens",
                "tags": [
                    "item-controller"
                ],
                "responses": {
                    "200": {
                        "description": "<b>REQUEST_SUCCESS</b> - <i>Busca realizada com sucesso.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            }
        },
        "/api/item": {
            "post": {
                "description": "Serviço responsável por criar um item.",
                "summary": "Cria item da categoria",
                "tags": [
                    "item-controller"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "categoryId": {
                                        "type": "number"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "categoryId": 1,
                                    "name": "Salário"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "<b>RECORD_SUCCESS</b> - <i>Item registrado.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_EXISTS</b> - <i>Já existe um item com esse nome na categoria {nomeDaCategoria}.</i><br><b>DATA_NOT_INFORMED</b> - <i>Dado não informado na requisição.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Categoria inexistente.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            },
            "put": {
                "description": "Serviço responsável por editar um item.",
                "summary": "Edita item da categoria",
                "tags": [
                    "item-controller"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "number"
                                    },
                                    "categoryId": {
                                        "type": "number"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "id": 1,
                                    "categoryId": 2,
                                    "name": "Cabelo"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "<b>UPDATED_SUCCESS</b> - <i>Item alterado com sucesso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_EXISTS</b> - <i>Já existe um item com esse nome na categoria {nomeDaCategoria}.</i><br><b>DATA_NOT_INFORMED</b> - <i>Dado não informado na requisição.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Item não encontrado.</i><br><b>DATA_NOT_FOUND</b> - <i>Categoria inexistente.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            }
        },
        "/api/item/{id}": {
            "get": {
                "description": "Serviço responsável por buscar um item.",
                "summary": "Busca um item",
                "tags": [
                    "item-controller"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": "true",
                        "type": "string",
                        "value": "1",
                        "description": "Parâmetro que seleciona qual item foi selecionado."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "<b>REQUEST_SUCCESS</b> - <i>Busca realizada com sucesso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_INVALID</b> - <i>ID do Item inválido.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Item inexistente.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            },
            "delete": {
                "description": "Serviço responsável por deletar um item.",
                "summary": "Deleta item",
                "tags": [
                    "item-controller"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": "true",
                        "type": "string",
                        "value": "1",
                        "description": "Parâmetro que identifica o item selecionado."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "<b>DATA_DELETED</b> - <i>Item deletado com sucessso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_NOT_INFORMED</b> - <i>Dado não informado na requisição.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Item inexistente.</i>"
                    },
                    "409": {
                        "description": "<b>DATA_CONFLICT</b> - <i>Existe registros inclusos nesse categoria. Apagá-la pode fazer com que dê conflito no sistema.</i><br>[Retorna os registros desse item]"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            }
        },
        "/api/item/record": {
            "post": {
                "description": "Serviço responsável por criar um registro no item.",
                "summary": "Cria registro no item",
                "tags": [
                    "item-controller"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "itemId": {
                                        "type": "number"
                                    },
                                    "value": {
                                        "type": "string"
                                    },
                                    "desc": {
                                        "type": "string"
                                    },
                                    "date": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "itemId": 1,
                                    "value": "Cabelo",
                                    "desc": "Cortei o cabelo dia 8",
                                    "date": "2021-12"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "<b>RECORD_SUCCESS</b> - <i>Registro incluso com sucesso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_NOT_INFORMED</b> - <i>Dado não informado na requisição.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Item inexistente.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            },
            "put": {
                "description": "Serviço responsável por editar um registro de um item.",
                "summary": "Edita registro de um item",
                "tags": [
                    "item-controller"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "number"
                                    },
                                    "value": {
                                        "type": "string"
                                    },
                                    "desc": {
                                        "type": "string"
                                    },
                                    "date": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "id": 1,
                                    "value": "10",
                                    "desc": "Pagamento do mês de Dezembro",
                                    "date": "2021-12-05"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "<b>UPDATED_SUCCESS</b> - <i>Registro do Item {nomeDoItem} alterado com sucessso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_NOT_INFORMED</b> - <i>Dado não informado na requisição.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Registro inexistente.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            }
        },
        "/api/item/record/{id}": {
            "get": {
                "description": "Serviço responsável por buscar um registro de um item.",
                "summary": "Busca um registro de um item",
                "tags": [
                    "item-controller"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": "true",
                        "type": "string",
                        "value": "1",
                        "description": "Parâmetro que seleciona qual registro foi selecionado."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "<b>REQUEST_SUCCESS</b> - <i>Busca realizada com sucesso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_INVALID</b> - <i>ID do Registro inválido.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Registro inexistente.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            },
            "delete": {
                "description": "Serviço responsável por deletar um registro do item.",
                "summary": "Deleta registro do item",
                "tags": [
                    "item-controller"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": "true",
                        "type": "string",
                        "value": "1",
                        "description": "Parâmetro que identifica o registro selecionado."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "<b>DATA_DELETED</b> - <i>Registro deletado com sucessso.</i>"
                    },
                    "400": {
                        "description": "<b>DATA_NOT_INFORMED</b> - <i>Dado não informado na requisição.</i>"
                    },
                    "404": {
                        "description": "<b>DATA_NOT_FOUND</b> - <i>Registro inexistente.</i>"
                    },
                    "500": {
                        "description": "<b>INTERNAL_SERVER_ERROR</b> - <i>Erro no servidor.</i>"
                    }
                }
            }
        }
    }
}